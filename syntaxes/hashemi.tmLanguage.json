{
    "name": "hashemi",
    "fileTypes": ["nl"], 
    "scopeName": "source.hashemi",
    "patterns": [
        {
            "name": "keyword.control.hashemi",
            "match": "\\b(bebin|ta|bood|age|na)\\b"
        },
        {
            "name": "function.call.hashemi",
            "match": "\\b(bechap|adadBekhoon)\\b"
        },
        {
            "name": "variable.other.hashemi",
            "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
        },
        {
            "name": "constant.numeric.hashemi",
            "match": "\\b\\d+\\b"
        },
        {
            "name": "string.quoted.double.hashemi",
            "begin": "\"",
            "end": "\""
        },
        {
            "name": "punctuation.separator.hashemi",
            "match": "\\;"
        },
        {
            "name": "punctuation.definition.block.hashemi",
            "match": "\\{|\\}"
        }
    ],
    "repository": {
        "keywords": {
            "patterns": [
                {
                    "name": "keyword.control.hashemi",
                    "match": "\\b(bebin|ta|bood|na)\\b"
                }
            ]
        }
    }
}
